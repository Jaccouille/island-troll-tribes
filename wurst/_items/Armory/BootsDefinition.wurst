constant WB_MODEL  = "Models\\WolfHideBoots.mdx"
constant BB_MODEL  = "Models\\BoneBoots.mdx"
constant IB_MODEL  = "Models\\IronBoots.mdx"

constant TT_COMMON = "Increases Move Speed by {0}, Intelligence by {1}"
constant TT_SKIN_BOOTS  = "A pair of boots made from animals pelt. " + TT_COMMON + " and provides warmth."
constant TT_ARMOR_BOOTS = "A pair of boots reinforced with metals. " + TT_COMMON + ", Armor by {2} and provides warmth."
