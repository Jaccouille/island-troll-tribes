class BootsDefinition extends ArmorsDefinition
    construct(int id, string icon, string model, string name, string toolTipExt, int cost, LinkedList<int> tinting, string abilities)
        super(id, icon, model, name, toolTipExt, toolTipExt, cost, tinting, abilities)
        this.setCooldownGroup("AIsp")

function string.bootToolTipFormat(real msBonus, real intBonus) returns string
    let bootDescription = this.format(msBonus.toToolTipOrange(), intBonus.toToolTipLightBlue())
    return bootDescription

function string.bootToolTipFormat(real msBonus, real intBonus, real armorBonus) returns string
    let bootDescription = this.format(msBonus.toToolTipOrange(), intBonus.toToolTipLightBlue(), armorBonus.toToolTipGreen())
    return bootDescription

function string.bootToolTipFormat(real msBonus, real statsBonus, real armorBonus, real evasionChance) returns string
    let bootDescription = this.format(msBonus.toToolTipOrange(), statsBonus.toToolTipLightBlue(), armorBonus.toToolTipGreen(), evasionChance.toToolTipLightBlue())
    return bootDescription

@compiletime function createBoots()
    new BootsDefinition(ITEM_ELK_SKIN_BOOTS  , ELK_SKIN_BOOTSS_ICON  , EB_MODEL, "Elk Skin Boots"  , TT_SKIN_BOOTS  .bootToolTipFormat(60 , 2           ) , 19, asList(255 , 255, 255), ABIL_EB )
    new BootsDefinition(ITEM_WOLF_SKIN_BOOTS , WOLF_SKIN_BOOTSS_ICON , WB_MODEL, "Wolf Skin Boots" , TT_ARMOR_BOOTS .bootToolTipFormat(60 , 4  , 2      ) , 33, asList(128 , 128, 128), ABIL_WB )
    new BootsDefinition(ITEM_BEAR_SKIN_BOOTS , BEAR_SKIN_BOOTSS_ICON , WB_MODEL, "Bear Skin Boots" , TT_ARMOR_BOOTS .bootToolTipFormat(60 , 5  , 3      ) , 47, asList(128 , 128, 128), ABIL_BB )
    new BootsDefinition(ITEM_BONE_BOOTS      , BONE_BOOTSS_ICON      , BB_MODEL, "Bone Boots"      , TT_BONE_BOOTS  .bootToolTipFormat(70 , 3  , 2      ) , 34, asList(255 , 255, 255), ABIL_BOB)
    new BootsDefinition(ITEM_IRON_BOOTS      , IRON_BOOTSS_ICON      , IB_MODEL, "Iron Boots"      , TT_ARMOR_BOOTS .bootToolTipFormat(80 , 6  , 3      ) , 55, asList(100 , 100, 100), ABIL_IB )
    new BootsDefinition(ITEM_STEEL_BOOTS     , STEEL_BOOTSS_ICON     , IB_MODEL, "Steel Boots"     , TT_ARMOR_BOOTS .bootToolTipFormat(100 , 10, 3       ) , 70, asList(0   , 119, 255), ABIL_SB )
    new BootsDefinition(ITEM_ANABOLIC_BOOTS  , ANABO_BOOTSS_ICON     , IB_MODEL, "Anabolic Boots"  , TT_ANABO_BOOTS .bootToolTipFormat(200, 4 , 5, 0.10 ) , 70, asList(200 , 80 , 80 ), ABIL_AB )