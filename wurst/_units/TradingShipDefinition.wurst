class TradingShipDefinition extends UnitDefinition
    construct(int unitId, string name, string icon, string model, string itemSold)
        super(unitId, 'edes')
        this.setCollisionSize(0)
        this.setAttack1AnimationBackswingPoint(0)
        this.setAttack1AnimationDamagePoint(0)
        this.setAttacksEnabled(0)
        this.setModelFile(model)
        this.setIconGameInterface(icon)
        this.setSpeedBase(120)
        this.setTurnRate(0.40)
        this.setUnitClassification("mechanical,neutral,standon")
        this.setLevel(2)
        this.setBuildTime(25)
        this.setName("Trade Ship " + name)
        this.setNameEditorSuffix("(Wurst)")
        this.setNormalAbilities(commaList('A048','Avul','Apit')) //Select hero, invulnerable, shop
        this.setItemsSold(itemSold)
        this.setRace(Race.Critters)
        this.setCategorizationCampaign(true)

